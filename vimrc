set nocompatible
syntax enable
set title
set hidden
set ruler
set showcmd
set encoding=utf-8
set fileencoding=utf-8
set lazyredraw
set history=50
set backspace=indent,eol,start
set whichwrap+=<,>,h,l,[,]
set nowrap
set colorcolumn=80
set scrolloff=3

set tabstop=4
set shiftwidth=4
set expandtab
set smartindent autoindent

set list
set listchars=tab:→\ ,trail:·,extends:»,precedes:«

